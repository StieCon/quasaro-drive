<Window x:Class="QuasaroDRV.DialogWindows.EnterPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuasaroDRV.DialogWindows"
        xmlns:p="clr-namespace:QuasaroDRV.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Strings.EnterPasswordDialogTitle}" SizeToContent="WidthAndHeight" Icon="/QuasaroDRV;component/Resources/Key_16x.png" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10">
        <Label Name="lblMessage" Margin="0,0,0,0" />
        <PasswordBox Name="tbxPassword" Width="250" Margin="0,3,0,3"/>
        <DockPanel LastChildFill="False" Margin="0,5,0,0">
            <Button DockPanel.Dock="Right" Name="btnOK" Content="{x:Static p:Strings.ButtonOkayTitle}" IsDefault="True" Width="80" Margin="10,0,0,0" Click="btnOK_Click" />
            <Button DockPanel.Dock="Right" Name="btnCancel" Content="{x:Static p:Strings.ButtonAbortTitle}" IsCancel="True" Width="80" Click="btnCancel_Click" />
        </DockPanel>
    </StackPanel>
</Window>
